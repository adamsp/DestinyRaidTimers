<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/main_theme_primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/main_theme_primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/main_theme_accent</item>
    </style>

    <style name="CrotaTheme" parent="AppTheme">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/crota_primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/crota_primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/crota_accent</item>
    </style>

    <style name="DRT.TextAppearance" parent="Base.TextAppearance.AppCompat"/>

    <style name="DRT.TextAppearance.Selection.BottomText" parent="DRT.TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/selection_text</item>
        <item name="android:background">@color/selection_text_background</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DRT.TextAppearance.Crota.Enrage" parent="DRT.TextAppearance">
        <item name="android:textColor">@color/crota_primary_text</item>
    </style>

    <style name="DRT.TextAppearance.Crota.Enrage.Label" parent="DRT.TextAppearance.Crota.Enrage">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DRT.TextAppearance.Crota.Enrage.Countdown" parent="DRT.TextAppearance.Crota.Enrage">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="SelectionGridImage">
        <item name="android:layout_margin">8dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="CrotaHelpImage">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CrotaHelpText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/crota_primary_text</item>
    </style>

</resources>
