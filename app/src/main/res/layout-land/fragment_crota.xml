<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fab="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/crota_primary">

    <LinearLayout
        android:id="@+id/fragment_crota_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <nz.net.speakman.destinyraidtimers.crota.views.CrotaPositionView
            android:id="@+id/fragment_crota_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <nz.net.speakman.destinyraidtimers.crota.views.CrotaMovementCountdownView
                android:id="@+id/fragment_crota_movement_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/fragment_crota_timer_indicator"
                android:src="@drawable/crota_timer_button_crystal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_crota_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <LinearLayout
        android:id="@+id/fragment_crota_enrage_countdown_container"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom|left"
        android:orientation="vertical"
        android:translationY="?attr/actionBarSize">

        <TextView
            style="@style/DRT.TextAppearance.Crota.Enrage.Label"
            android:text="@string/crota_timer_label_enrage_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/fragment_crota_enrage_countdown"
            style="@style/DRT.TextAppearance.Crota.Enrage.Countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_crota_timer_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        fab:fab_colorNormal="@color/crota_accent"
        fab:fab_colorPressed="@color/crota_primary"/>

</FrameLayout>