<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_crota_detail_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_crota_label_enrage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Left:"/>

        <TextView
            android:id="@+id/fragment_crota_time_to_enrage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"/>

        <TextView
            android:id="@+id/fragment_crota_label_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crota_timer_label_elapsed"/>

        <TextView
            android:id="@+id/fragment_crota_time_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"/>

        <ImageView
            android:id="@+id/fragment_crota_position"
            android:scaleType="centerInside"
            android:layout_below="@id/fragment_crota_time_to_enrage"
            android:layout_width="match_parent"
            android:src="@drawable/crota_position_center"
            android:layout_height="150dp"/>

    </LinearLayout>

    <include layout="@layout/fragment_crota_progress_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:layout_toRightOf="@id/fragment_crota_detail_container"/>

    <TextView
        android:id="@+id/label_licences"
        android:text="@string/label_licenses"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:freezesText="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>