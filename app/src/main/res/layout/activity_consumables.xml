<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <nz.net.speakman.destinyraidtimers.consumables.views.Consumables10CountdownView
            android:id="@+id/activity_consumables_10_countdown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <nz.net.speakman.destinyraidtimers.consumables.views.Consumables30CountdownView
            android:id="@+id/activity_consumables_30_countdown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_consumables_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
</FrameLayout>