<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:id="@+id/consumables_countdown_image"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/consumables_countdown_label"
        android:textSize="80dp"
        android:textColor="@color/consumables_primary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/consumables_countdown_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/consumable_glimmer"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/consumables_countdown_timer_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"
        fab:fab_icon="@drawable/timer_button_reset"
        fab:fab_colorNormal="@color/consumables_accent"
        fab:fab_colorPressed="@color/consumables_primary_light"/>
</FrameLayout>
